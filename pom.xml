	<repositories>
		<repository>
			<id>central</id>
			<url>http://repo1.maven.org/maven2</url>
		</repository>
		<repository>
			<id>codehaus</id>
			<name>Codehaus Maven 2.x Release Repository</name>
			<url>http://repository.codehaus.org</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>codehaus-snapshots</id>
			<name>Codehaus Maven 2.x Snapshots Repository</name>
			<url>http://snapshots.repository.codehaus.org</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
		<repository>
			<id>muleforge</id>
			<url>http://repository.muleforge.org</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>sonatype-central</id>
			<name>Sonatype Central</name>
			<url>https://repository.sonatype.org/content/repositories/central/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>central</id>
			<url>http://repo1.maven.org/maven2</url>
		</pluginRepository>
		<pluginRepository>
			<id>apache-plugin-snapshots</id>
			<name>Apache Maven Plugins Snapshot Repository</name>
			<url>http://people.apache.org/repo/m2-snapshot-repository</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</pluginRepository>
		<pluginRepository>
			<id>muleforge</id>
			<name>MuleForge Repository</name>
			<url>http://repository.muleforge.org</url>
		</pluginRepository>
		<pluginRepository>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<id>atanion</id>
			<url>http://www.atanion.com/maven2</url>
		</pluginRepository>
		<pluginRepository>
			<id>maven2-repository.dev.java.net</id>
			<name>Java.net Maven 2 Repository</name>
			<url>http://download.java.net/maven/2</url>
		</pluginRepository>
		<pluginRepository>
			<id>sonatype-central</id>
			<name>Sonatype Central</name>
			<url>https://repository.sonatype.org/content/repositories/central/</url>
		</pluginRepository>
	</pluginRepositories>
	<build>
		<resources>
			<resource>
				<directory>conf</directory>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>ISO-8859-1</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<archive>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
							<packageName>nl.clockwork.mule.ebms</packageName>
							<addClasspath>true</addClasspath>
							<addExtensions />
							<classpathPrefix />
						</manifest>
						<manifestEntries>
							<mode>development</mode>
							<url>${project.url}</url>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<instrumentation>
						<ignores>
							<ignore>nl.clockwork.ebms.dao.*</ignore>
						</ignores>
					</instrumentation>
					<systemProperties>
						<property>
							<name>net.sourceforge.cobertura.datafile</name>
							<value>${basedir}/target/cobertura/cobertura.ser</value>
						</property>
					</systemProperties>
					<formats>
						<format>html</format>
						<format>xml</format>
					</formats>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<version>2.3.1</version>
				<configuration>
					<debug>false</debug>
					<findbugsXmlOutputDirectory>findbugs</findbugsXmlOutputDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>generate-cpp-cpa-model</id>
			<activation>
	 			<property>
	  				<name>generate-cpp-cpa-model</name>
				</property>  				
			</activation>
	  		<build>
	    		<plugins>
					<plugin>
						<groupId>com.sun.tools.xjc.maven2</groupId>
						<artifactId>maven-jaxb-plugin</artifactId>
						<version>1.1.1</version>
						<executions>
							<execution>
									<id>generateCPPCPA20Model</id>
									<goals>
										<goal>generate</goal>
									</goals>
									<phase>
										generate-sources
									</phase>	
									<configuration>
										<generatePackage>nl.clockwork.ebms.model.cpp.cpa</generatePackage>
										<generateDirectory>src/main/java</generateDirectory>
										<includeSchemas>
											<includeSchema>nl/clockwork/mule/ebms/xsd/cpp-cpa-2_0.xsd</includeSchema>
										</includeSchemas>
										<includeBindings>
											<includeBinding>nl/clockwork/mule/ebms/xsd/cpp-cpa-2_0.xjc</includeBinding>
										</includeBindings>
										<removeOldOutput>false</removeOldOutput>
										<verbose>false</verbose>					
									</configuration>
							</execution>
						</executions>		
					</plugin>				
				</plugins>
			</build>
		</profile>
		<profile>
			<id>generate-ebf-model</id>
			<activation>
	 			<property>
	  				<name>generate-ebf-model</name>
				</property>  				
			</activation>
	  		<build>
	    		<plugins>
					<plugin>
						<groupId>com.sun.tools.xjc.maven2</groupId>
						<artifactId>maven-jaxb-plugin</artifactId>
						<version>1.1.1</version>
						<executions>
							<execution>
									<id>generateEBFAfleverenModel</id>
									<goals>
										<goal>generate</goal>
									</goals>
									<phase>
										generate-sources
									</phase>	
									<configuration>
										<generatePackage>nl.clockwork.mule.ebms.stub.ebf.model.afleveren.bericht</generatePackage>
										<generateDirectory>src/main/java</generateDirectory>
										<includeSchemas>
											<includeSchema>nl/clockwork/mule/ebms/stub/ebf/xsd/Afleveren_ebMS_2.0_v1.1.xsd</includeSchema>
										</includeSchemas>
										<removeOldOutput>false</removeOldOutput>
										<verbose>false</verbose>					
									</configuration>
							</execution>
							<execution>
									<id>generateEBFAfleverenBevestigingModel</id>
									<goals>
										<goal>generate</goal>
									</goals>
									<phase>
										generate-sources
									</phase>	
									<configuration>
										<generatePackage>nl.clockwork.mule.ebms.stub.ebf.model.afleveren.bevestiging</generatePackage>
										<generateDirectory>src/main/java</generateDirectory>
										<includeSchemas>
											<includeSchema>nl/clockwork/mule/ebms/stub/ebf/xsd/Afleveren_bevestiging_ebMS_2.0_v1.1.xsd</includeSchema>
										</includeSchemas>
										<removeOldOutput>false</removeOldOutput>
										<verbose>false</verbose>					
									</configuration>
							</execution>
							<execution>
									<id>generateEBFAanleverenModel</id>
									<goals>
										<goal>generate</goal>
									</goals>
									<phase>
										generate-sources
									</phase>	
									<configuration>
										<generatePackage>nl.clockwork.mule.ebms.stub.ebf.model.aanleveren.bericht</generatePackage>
										<generateDirectory>src/main/java</generateDirectory>
										<includeSchemas>
											<includeSchema>nl/clockwork/mule/ebms/stub/ebf/xsd/Aanleveren_ebMS_2.0_v1.1.xsd</includeSchema>
										</includeSchemas>
										<removeOldOutput>false</removeOldOutput>
										<verbose>false</verbose>					
									</configuration>
							</execution>
							<execution>
									<id>generateEBFAanleverenBevestigingModel</id>
									<goals>
										<goal>generate</goal>
									</goals>
									<phase>
										generate-sources
									</phase>	
									<configuration>
										<generatePackage>nl.clockwork.mule.ebms.stub.ebf.model.aanleveren.bevestiging</generatePackage>
										<generateDirectory>src/main/java</generateDirectory>
										<includeSchemas>
											<includeSchema>nl/clockwork/mule/ebms/stub/ebf/xsd/Aanleveren_bevestiging_ebMS_2.0_v1.1.xsd</includeSchema>
										</includeSchemas>
										<removeOldOutput>false</removeOldOutput>
										<verbose>false</verbose>					
									</configuration>
							</execution>
						</executions>		
					</plugin>				
				</plugins>
			</build>
		</profile>
	</profiles>
